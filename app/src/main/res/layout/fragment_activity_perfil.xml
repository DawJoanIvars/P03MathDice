<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joan.p03mathdice4.activity_perfil"
    android:background="#00a2e8">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="184dp"
        android:id="@+id/nom"
        android:textIsSelectable="false"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edad"
        android:layout_alignWithParentIfMissing="false"
        android:id="@+id/edad"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:hint=""
        android:layout_height="wrap_content"
        android:id="@+id/nomText"
        android:layout_below="@+id/nom"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:hint=""
        android:layout_height="wrap_content"
        android:id="@+id/edadText"
        android:layout_below="@+id/edad"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:id="@+id/bContinuar"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/edadText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
